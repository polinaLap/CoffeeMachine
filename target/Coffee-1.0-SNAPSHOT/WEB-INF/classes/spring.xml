<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="ICoffeeTypeDAO" class="univ.lab.classes.repository.dao.CoffeeTypeDAO">
    <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="ICoffeeMachineDAO" class="univ.lab.classes.repository.dao.CoffeeMachineDAO">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="IUserDAO" class="univ.lab.classes.repository.dao.UserDAO">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="IIngredientPricesDAO" class="univ.lab.classes.repository.dao.IngredientPricesDAO">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="IGetAssortimentService" class="univ.lab.classes.services.GetAssortimentService">
        <property name="_ingredientRepository" ref="IIngredientPricesDAO" />
        <property name="_coffeeMachineRepository" ref="ICoffeeMachineDAO" />
        <property name="_coffeeTypeRepository" ref="ICoffeeTypeDAO" />
    </bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver" />
        <property name="url" value="jdbc:mysql://localhost:3306/CoffeeDb" />
        <property name="username" value="root" />
        <property name="password" value="2585" />
        <property name="connectionProperties" value="serverTimezone=UTC"/>
    </bean>
</beans>